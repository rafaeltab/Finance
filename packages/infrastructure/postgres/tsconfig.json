{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"baseUrl": "./",
		"paths": {
			"#src/*": [
				"src/*"
			],
			"#tests/*": [
				"tests/*"
			]
		}
	}
}