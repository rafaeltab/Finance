{
	"extends": "@finance/lib-tsconfig/configs/tsconfig.base.json",
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
	],
	"compilerOptions": {
		"outDir": "build",
		"declaration": true,
		"allowJs": true,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"dom"
		],
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"exclude": [
		"node_modules"
	]
}