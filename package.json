{
	"name": "@finance/monorepo",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"workspaces": [
		"services/*/api",
		"services/*/sdk",
		"services/*/application",
		"services/*/domain",
		"services/*/infrastructure/*",
		"libraries/config/*",
		"libraries/component/*",
		"libraries/types/*",
		"libraries/utility/*",
		"applications/*"
	],
	"scripts": {
		"build": "turbo run build",
		"build:dev": "turbo run build:dev",
		"dev": "turbo run dev --parallel",
		"start:dev": "turbo run start:dev --parallel",
		"lint": "turbo run lint --output-logs errors-only",
		"lint:fix": "turbo run lint:fix",
		"test": "turbo run test",
		"start": "turbo run start",
		"clean": "turbo run clean",
		"clean:node_modules": "rimraf ./**/node_modules/**/* -g -v"
	},
	"dependencies": {
		"@finance/eslint-config-lib-lint": "*",
		"@typescript-eslint/eslint-plugin": "^5.54.1",
		"@typescript-eslint/parser": "^5.0.0",
		"eslint": "^8.2.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-next": "^13.2.4",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.28.2",
		"eslint-plugin-react-hooks": "^4.3.0",
		"rimraf": "^4.4.0",
		"turbo": "latest",
		"typescript": "^4.9.4"
	},
	"packageManager": "yarn@3.3.1"
}
